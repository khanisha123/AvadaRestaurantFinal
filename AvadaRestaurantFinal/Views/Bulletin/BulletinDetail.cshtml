<!-- Section 3 End -->
<section class="Section3-bulletinDetail">
    <div class="Section3-StarSide-bulletinDetail">
        <hr width="315.98px"><i class="fa-solid fa-star-of-life Section3-Star-bulletinDetail"></i> <hr width="315.98px">
    </div>
    <div class="Section3-Show-Comment-bulletinDetail">
        <h2>@Model.bulletin.comments.Count Comment</h2>
        @foreach (var item in Model.comments)
        {
            if (item.BulletinId == Model.bulletin.Id)
            {
                <div class="Section3-Show-Comment-NameAndTextSide-bulletinDetail">
                    <span><b>@item.appUser.FullName</b></span><span> - @item.CommentDate.ToString("MM/dd/yyyy hh:mm tt")</span> @if (ViewBag.userId == item.AppUserId) {<a  asp-action="BulletinDetailRemove" asp-route-id="@item.Id" class="deleteEdit-Comment">Delete</a> <a asp-action="Update" asp-route-id="@item.Id" class="deleteEdit-Comment">  Edit</a>}
                    <p>
                        @item.addComment
                    </p>
                </div>
                <hr>
            }
        }


    </div>
    <form method="post">
        <div class="Section3-LeaveAComment-bulletinDetail">
            <h2>Leave A Comment</h2>
            <div class="Section3-inputSide-LeaveAComment-bulletinDetail">
                @*<input value="" type="text" asp-for="comment.Name" placeholder="Name (required)">
                <span asp-validation-for="comment.Name" style="color:red;"></span>*@
                <input type="text" style="width: 654.72px;" value="" class="Section3-inputSide-LeaveAComment-BeforetextArea-bulletinDetail" asp-for="comment.addComment" placeholder="Comment..." />
                <span asp-validation-for="comment.addComment" style="color:red;"></span>
                <button>POST COMMENT</button>
            </div>
            
        </div>
    </form>
</section>
<!-- Section 3 End -->
<!-- Section 4 Start -->
<section>
    <div class="Section4-BulletinDetail">
        <h3>Related Posts</h3>
        <div class="Section4-ForFlex-ProductCart-BulletinDetail">
            @foreach (var bulletins in Model.bulletins)
            {
                <div class="Section4-ProductCard-BulletinDetail">
                    <a asp-controller="Bulletin" asp-action="BulletinDetail" asp-route-id="@bulletins.Id">
                        <img src="~/img/@bulletins.ForDetailImageUrl" alt="">
                    </a>
                    <a asp-controller="Bulletin" asp-action="BulletinDetail" asp-route-id="@bulletins.Id">
                        <h4 style="color:black;">
                            @bulletins.ForDetailName
                        </h4>
                    </a>
                    <span>January 7th, 2020 </span>|<span> @bulletins.comments.Count Comments</span>
                </div>
            }

        </div>
    </div>
</section>
<!-- Section 4 End -->

<style>
