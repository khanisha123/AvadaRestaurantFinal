    .Section1-ImageSide-bulletindetailUpdate {
        background-color: black;
        width: 100%;
        height: 418.97px;
        position: absolute;
    }

        .Section1-ImageSide-bulletindetailUpdate img {
            opacity: 0.3;
        }

    .Section1-TextSide-bulletindetailUpdate p {
        color: white;
        font-size: 18px;
        font-family: 'Lora', serif;
