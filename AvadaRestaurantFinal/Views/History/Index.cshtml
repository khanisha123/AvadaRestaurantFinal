@using AvadaRestaurantFinal.ViewModels
@model HistoryVM
@{
    ViewData["Title"] = "Index";
}

<!-- Section 1 Start    -->
<section style="width: 100%; height: 418.97px;">
    <div class="Section1-ImageSide-HistoryPage">
        <img src="~/img/@Model.historyHeader.ImageUrl" alt="">
    </div>
    <div class="Section1-TextSide-HistoryPage">
        <h6>@Model.historyHeader.Header</h6>
        <h1>@Model.historyHeader.Name</h1>
    </div>
</section>
<!-- Section 1 End    -->
<!-- Section 2 Start    -->
<section>
    <div class="Section2-ForFlex-HistoryPage">
        <div class="Section2-ImageSide-HistoryPage">
            <img src="~/img/@Model.PullUpAChair.ImageUrl" alt="">
            <span>@Model.PullUpAChair.ImageUrlText</span>
        </div>
        <div class="Section2-TextSide-HistoryPage">
            <p>
                @Model.PullUpAChair.Description1
            </p>
            <div style="margin-top: -40px; margin-bottom: 20px;">
                <h2 style="text-transform: uppercase;">
                    @Model.PullUpAChair.Description2
                </h2>
            </div>
            <span>
                @Model.PullUpAChair.Description3
            </span>
            <img src="~/img/@Model.PullUpAChair.SicnatureImageUrl" alt="">
        </div>
    </div>
</section>
<!-- Section 2 End    -->
<!-- Section 3 Start    -->
<section>
    <div class="Section3-ForFlexAndBackround-HistoryPage">
        <div class="Section3-ImageSide-HistoryPage">
            <img src="~/img/slider52x.jpg" alt="">
        </div>
        <div class="Section3-TextSide-HistoryPage">
            <div class="Section3-LineAndText-HistoryPage">
                <div style="margin-right: 30px;" class="Section3-LineAndText-Line-HistoryPage"></div>
                <h6>@Model.fineDiningExperience.Header</h6>
            </div>
            <div class="Section3-TextSide-ForMargin-HistoryPage">
                <h2>
                    Fine
                    Dining
                    experience
                </h2>
                <p>
                    @Model.fineDiningExperience.Description
                </p>
                <div class="Section3-Border-HistoryPage">
                    <span>EXPLORE THE MENU</span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section 3 End    -->
<!-- Section 4 Start    -->
<section>
    <div class="Section4-ForFlex-HistoryPage">
        <div class="Section4-ProductCard-HistoryPage">
            <img width="96" height="96" src="https://img.icons8.com/fluency-systems-regular/96/000000/sushi.png" />
