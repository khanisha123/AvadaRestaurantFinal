@using AvadaRestaurantFinal.Models
@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}




<div class="col-lg-6 grid-margin stretch-card">
    <form>
        <input type="text" placeholder="Search" name="name" />
        <input type="submit" value="search" />
    </form>
    <div class="card w-50">
        <div class="card-body">
            <h4 class="card-title">User Table</h4>
            <!--<p class="card-description">-->
            <a class="btn btn-primary" asp-controller="User" asp-action="Create"> User Create </a>
            <!--</p>-->
            <div class="table-responsive-xxl">
                <table class="table">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>Email</th>
                            <th>UserName</th>
                            <th>Active</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                @if (User.Identity.Name == item.UserName)
                                {
                                    <td>el saxla</td>
                                }
                                else
                                {
                                    @if (item.isActive)
                                    {
                                        <td><a asp-controller="User" asp-action="IsActive" asp-route-id="@item.Id" class="btn btn-success">Active</a></td>
                                    }
                                    else
                                    {
                                        <td><a asp-controller="User" asp-action="IsActive" asp-route-id="@item.Id" class="btn btn-danger">Deactive</a></td>

                                    }
                                }
                                <td>

                                    <a asp-controller="User" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                    <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detail</a>
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
                                    <a asp-controller="Role" asp-action="Update" asp-route-id="@item.Id" class="btn btn-danger">Change Role</a>

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


