@using AvadaRestaurantFinal.Models
@model IEnumerable<Sales>
@{
    ViewData["Title"] = "Index";
}


    
            
           
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>FullName</th>
                            <th>Email</th>
                            <th>Product Name</th>
                            <th>Date</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AppUser.FullName</td>
                                <td>@item.AppUser.Email</td>
                                <td>
                                    @foreach (var salesProduct in item.salesProducts)
                                    {

                                        <p>@salesProduct.Id.  @salesProduct.product.Name</p>
                                    }
                                </td>
                                <td>@item.SaleDate.ToString("MM/dd/yyyy")</td>
                                <td>@item.Total</td>
                            </tr>
                        }
                        

                    </tbody>
                </table>

  
