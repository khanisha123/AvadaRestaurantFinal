@using Microsoft.AspNetCore.Identity
@model IList<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a></td>
            <td><a class="btn btn-danger">Update</a></td>
        </tr>

    }

</table>
<a asp-controller="Role" asp-action="Create" class="btn btn-outline-primary">Create</a>
<br />
<br />
<a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">Go to User</a>
