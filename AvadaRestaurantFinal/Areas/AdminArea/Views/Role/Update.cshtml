@using AvadaRestaurantFinal.ViewModels
@model UpdateRoleVM
@{
    ViewData["Title"] = "Update";
}

<h1>@Model.User.FullName</h1>

<form method="post">

    @foreach (var item in Model.Roles)
    {
        <input @(Model.UserRoles.Contains(item.Name) ? "checked =\"checked\"" : "") type="checkbox" name="roles" value="@item.Name" /> @item.Name <br />
    }
    <button type="submit"> change</button>
</form>
<a class="btn btn-outline-reddit" asp-controller="Role" asp-action="Index">Go to Back</a>


