@using AvadaRestaurantFinal.Models
@model List<HorsDoeuvresProduct>
@{
    ViewData["Title"] = "Index";
}



<table class=" table table-bordered table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Price</th>
            <th scope="col">Name</th>
            @*<th scope="col">DescriptionFront</th>*@
            <th scope="col">Calories</th>
            <th scope="col">GlutenFree</th>
            <th scope="col">LactoseFree</th>
            @*<th scope="col">TakeoutSideDescription</th>*@
            <th scope="col">CategoryName</th>
            @*<th scope="col">HomeSideDescription</th>*@
            <th>Delete</th>
            <th>Update</th>
            <th>AdminAreaDetail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td><img style="border-radius:50%;" width="70" height="70" src="~/img/@item.ImageUrl" alt="Alternate Text" /></td>
            <td>$@item.Price</td>
            <td>@item.Name</td>
            @*<td>@item.DescriptionFront</td>*@
            <td>@item.Calories</td>
            <td>@item.GlutenFree</td>
            <td>@item.LactoseFree</td>
            @*<td style="font-size:10px;">@item.TakeoutSideDescription</td>*@
            <td>@item.CategoryName</td>
            @*<td>@item.HomeSideDescription</td>*@
            <td>
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">AdminAreaDetail</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a style="margin:25px 40px 45px;width:200px; padding:10px 0px;transition:0.5s ease-out" class="btn btn-outline-primary" asp-controller="HorsDoeuvresProduct" asp-action="Create">Create</a>

